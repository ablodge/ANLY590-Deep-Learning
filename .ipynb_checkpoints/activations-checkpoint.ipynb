    "def relu(x):\n",
    "    if x<0:\n",
    "        return 0\n",
    "    else:\n",
    "        return x\n",
    "    \n",
    "def relu_deriv(x):\n",
    "    return 0 if x<0 else 1\n",
    "\n",
    "def leaky_relu(x, a=0.1):\n",
    "    if x<0:\n",
    "        return a*x\n",
    "    else:\n",
    "        return x\n",
    "    \n",
    "def leaky_relu_deriv(x, a=0.1):\n",
    "    return a if x<0 else 1\n"
   ]
